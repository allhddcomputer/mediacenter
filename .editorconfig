root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.rst]
indent_size = 4
end_of_line = lf

; JavaScript and JS mixes - match eslint settings; JSON also matches .NET Core templates
[*.{js,json}]
indent_size = 2

; Markdown - match markdownlint settings
[*.{md,markdown}]
indent_size = 2

; PlantUML - match examples
[*.puml]
indent_size = 2
